('Vusal','Qocayev'),
('Fatime','Seyyaf'),
('Omer','Seyyaf'),
('Gunay','Eliyeva')

CREATE TABLE Subjects
(
	Id INT PRIMARY KEY IDENTITY,
	No NVARCHAR(20) NOT NULL
)
INSERT INTO Subjects
VALUES
